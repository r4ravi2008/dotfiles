{
  "$schema": "https://opencode.ai/config.json",
  "model": "openai/gpt-5.3-codex",

  "plugin": ["opencode-copilot-auth@latest"],
  "provider": {
    "openai": {
      "models": {
        "gpt-5.3-codex": {
          "limit": {
            "context": 250000,
            "output": 65536
          }
        },
        "gpt-5.2": {
          "limit": {
            "context": 250000,
            "output": 65536
          }
        }
      }
    },
    "github-copilot": {
      "models": {
        "gpt-5.2": {
          "limit": {
            "context": 250000,
            "output": 65536
          }
        },
        "gpt-5.2-codex": {
          "limit": {
            "context": 250000,
            "output": 65536
          }
        },
        "claude-opus-4.5": {
          "limit": {
            "context": 200000,
            "output": 32768
          }
        },
        "gpt-5.3-codex": {
          "modalities": {
            "input": ["text", "image"],
            "output": ["text"]
          }
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["bunx", "--bun", "@upstash/context7-mcp"],
      "enabled": false,
      "environment": {}
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true,
      "environment": {}
    },
    "pdf-reader": {
      "type": "local",
      "command": ["bunx", "--bun", "@sylphx/pdf-reader-mcp"],
      "enabled": false,
      "environment": {}
    },
    "MiniMax": {
      "type": "local",
      "command": ["uvx", "minimax-coding-plan-mcp", "-y"],
      "enabled": true,
      "environment": {
        "MINIMAX_API_HOST": "https://api.minimax.io"
      }
      "enabled": false
    }
  },
  "agent": {
    "build": {
      "permission": {
        "read": "allow",
        "edit": "allow",
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "bash": "allow",
        "task": "allow",
        "external_directory": {
          "/tmp*": "allow",
          "/home/r4ravi2008/*": "allow",
          "/home/r4ravi2008/projects/*": "allow",
          "/home/r4ravi2008/projects/bihar-ai/Fire_Noc/src/fire_noc/rulebook/*": "allow"
        },
        "webfetch": "allow",
        "websearch": "allow",
        "question": "allow"
      }
    }
  }
}
