{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "github-copilot": {
      "models": {
        "claude-sonnet-4": {
          "limit": {
            "context": 200000,
            "output": 65536
          }
        },
        "claude-opus-4.5": {
          "limit": {
            "context": 200000,
            "output": 32768
          }
        },
        "gpt-4o": {
          "limit": {
            "context": 128000,
            "output": 16384
          }
        },
        "gpt-4.1": {
          "limit": {
            "context": 1047576,
            "output": 32768
          }
        },
        "o3-mini": {
          "limit": {
            "context": 200000,
            "output": 100000
          }
        },
        "gemini-2.0-flash": {
          "limit": {
            "context": 1048576,
            "output": 8192
          }
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["bunx", "--bun", "@upstash/context7-mcp"],
      "enabled": false,
      "environment": {}
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true,
      "environment": {}
    },
    "pdf-reader": {
      "type": "local",
      "command": ["bunx", "--bun", "@sylphx/pdf-reader-mcp"],
      "enabled": false,
      "environment": {}
    },
    "MiniMax": {
      "type": "local",
      "command": ["uvx", "minimax-coding-plan-mcp", "-y"],
      "enabled": true,
      "environment": {
        "MINIMAX_API_HOST": "https://api.minimax.io"
      }
    }
  },
  "agent": {
    "build": {
      "permission": {
        "read": "allow",
        "edit": "allow",
        "glob": "allow",
        "grep": "allow",
        "list": "allow",
        "bash": "allow",
        "task": "allow",
        "external_directory": {
          "/tmp*": "allow",
          "/home/r4ravi2008/*": "allow",
          "/home/r4ravi2008/projects/*": "allow",
          "/home/r4ravi2008/projects/bihar-ai/Fire_Noc/src/fire_noc/rulebook/*": "allow"
        },
        "webfetch": "allow",
        "websearch": "allow",
        "question": "allow"
      }
    }
  }
}
